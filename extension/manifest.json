{
  "manifest_version": 2,
  "name": "おかんのニコニコプレゼン",
  "version": "0.0.1",
  "description": "The niconico method for Google Chrome",

  "icons": {
    "16": "icons/tere_okanchan16.png",
    "48": "icons/tere_okanchan48.png",
    "128": "icons/tere_okanchan128.png"
  },

  "browser_action":  {
    "default_icon": {
      "19":"icons/tere_okanchan19.png",
      "38":"icons/tere_okanchan38.png"
    },
    "default_title": "おかんのニコニコプレゼン"
  },

  "background": {
    "scripts": ["scripts/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/socket.io-1.7.3.js", "scripts/content-script.js"]
    }
  ],
  "web_accessible_resources": [
    "images/*"
  ],
  "permissions": [
    "<all_urls>",
    "tabs",
    "storage"
  ]
}
